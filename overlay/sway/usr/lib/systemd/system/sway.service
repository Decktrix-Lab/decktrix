[Unit]
Description=sway - SirCmpwn's Wayland window manager
Documentation=man:sway(5)

[Install]
WantedBy=multi-user.target

[Service]
Type=simple
User=debian
Group=debian
Environment="XDG_RUNTIME_DIR=/home/debian"
EnvironmentFile=-%h/.config/sway/env
ExecStart=/usr/bin/sway
Restart=on-failure
RestartSec=1
TimeoutStopSec=10
